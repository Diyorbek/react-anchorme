{
  "compilerOptions": {
    "sourceMap": true,
    "module": "esnext",
    "target": "es2018",
    "rootDir": "src",
    "outDir": "dist",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "react",
    "skipLibCheck": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src"],
  "exclude": ["src/*.test.ts", "src/*.test.tsx"]
}